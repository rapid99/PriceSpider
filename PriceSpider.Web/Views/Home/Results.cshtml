@model List<ProductModel>

<div class="row">
    <h3>Results for @Model.Select(b => b.ManufactoringID).SingleOrDefault()</h3>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var result in Model)
        {
            <tr>
                <td class="col-8"><strong>@result.Name</strong></td>
            </tr>
            <tr>
                <td class="col-4"><span style="text-decoration:underline;">@result.Company:</span> @result.Price</td>
            </tr>
        }
    </tbody>
</table>

